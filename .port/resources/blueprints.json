    "icon": "Shield",
    "description": "A security vulnerability issue detected by Aikido",
    "schema": {
      "properties": {
        "id": {
          "title": "Vulnerability ID",
          "type": "number"
        },
        "type": {
          "title": "Type",
          "type": "string"
        },
        "title": {
          "title": "Title",
          "type": "string"
        },
        "description": {
          "title": "Description",
          "type": "string"
        },
        "severity_score": {
          "title": "Severity Score",
          "type": "number"
        },
        "severity": {
          "title": "Severity",
          "type": "string",
          "enum": [
            "critical",
            "high",
            "medium",
            "low",
            "info"
          ]
        },
        "status": {
          "title": "Status",
          "type": "string",
          "enum": [
            "new",
            "in_progress",
            "resolved",
            "accepted",
            "false_positive"
          ]
        },
        "time_to_fix_minutes": {
          "title": "Time to Fix (minutes)",
          "type": "number"
        },
        "how_to_fix": {
          "title": "How to Fix",
          "type": "string"
        },
        "cveIds": {
          "title": "CVE Identifiers",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "id",
        "title",
        "severity",
        "severity_score",
        "status"
      ]
    },
    "aggregationProperties": {},
    "relations": {
      "repository": {
        "target": "CodeRepository",
        "title": "Affected Repository",
